<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>AppolloStockMarket</display-name>
  <welcome-file-list>
    <welcome-file>main/index.html</welcome-file>
    <welcome-file>main/index.htm</welcome-file>
    <welcome-file>main/index.jsp</welcome-file>
    <welcome-file>main/default.html</welcome-file>
    <welcome-file>main/default.htm</welcome-file>
    <welcome-file>main/default.jsp</welcome-file>
  </welcome-file-list>
  <servlet> 
      <servlet-name>Jersey RESTful Application</servlet-name> 
      <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class> 
      <init-param> 
         <param-name>jersey.config.server.provider.packages</param-name> 
         <param-value>org.appollo.stock</param-value> 
      </init-param> 
   </servlet> 
   <servlet-mapping> 
      <servlet-name>Jersey RESTful Application</servlet-name> 
      <url-pattern>/api/*</url-pattern> 
   </servlet-mapping>
</web-app>